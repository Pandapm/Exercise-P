@model IEnumerable<PMLib.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>图书信息</h2>

<p>
    @Html.ActionLink("新书上架", "Create")
</p>
<form action="~/AdminNav" method="post"><button type="submit" class="btn btn-primary float-right">返回导航页面</button></form>
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            书名
        </th>
        <th>
            位置
        </th>
        <th>
            状态
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BK.bkName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bookSite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bookState)
            </td>
            <td>
               
                @Html.ActionLink("详情", "Details", new { id = item.bookID }) |
                @Html.ActionLink("下架", "Delete", new { id = item.bookID })
            </td>
        </tr>
    }

</table>
