@model PMLib.Models.Record

@{
    ViewBag.Title = "Delete";
}

<h2>还书</h2>

<h3>确定还书？</h3>
<fieldset>
    <legend>Record</legend>

    <div class="display-label">
         读者姓名：
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Reader.readerName)
    </div>

    <div class="display-label">
         图书ID：
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.bookID)
    </div>

    <div class="display-label">
         借书时间：
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.lendTime)
    </div>

    <div class="display-label">
         应还时间：
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.wellTime)
    </div>

    <div class="display-label">
         还书时间：
    </div>
    <div class="display-field">
        @DateTime.Now;
        @Html.DisplayFor(model => model.returnTime)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="还书" /> |
        @Html.ActionLink("返回列表", "Index")
    </p>
}
