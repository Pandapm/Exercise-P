@model IEnumerable<PMLib.Models.Reader>

@{
    ViewBag.Title = "Index";
}

<h2>读者管理</h2>

<p>
    @Html.ActionLink("添加新读者", "Create")
</p>
<form action="~/AdminNav" method="post"><button type="submit" class="btn btn-primary float-right">返回导航页面</button></form>
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.readerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.readerTel)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.readerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.readerTel)
            </td>
            <td>
                @Html.ActionLink("编辑", "Edit", new { id = item.readerID }) |
                @Html.ActionLink("详情", "Details", new { id = item.readerID }) 
                
            </td>
        </tr>
    }

</table>
